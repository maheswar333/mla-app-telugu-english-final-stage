<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="513dp"
            android:orientation="vertical"
            android:padding="30dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/forget_UserNnameTTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/editTextHint"
                android:paddingTop="50dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <EditText
                    android:id="@+id/forget_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|text"
                    android:hint="User Name" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/forgetmobileTTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/editTextHint"
                android:paddingTop="5dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <EditText
                    android:id="@+id/forget_mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|text"
                    android:hint="Registered Mobile Number" />

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp">
                <Button
                    android:id="@+id/forget_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   Submit   "
                    android:layout_gravity="center"
                    android:minHeight="?attr/actionBarSize"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" style="@style/ButtonText" />
            </LinearLayout>
            <TextView
                android:id="@+id/forget_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#673AB7"
                android:textSize="20sp"
                android:paddingTop="40sp"/>
        </LinearLayout>
    </LinearLayout>

    <!--android.support.design.widget.CoordinatorLayout-->
</RelativeLayout>


