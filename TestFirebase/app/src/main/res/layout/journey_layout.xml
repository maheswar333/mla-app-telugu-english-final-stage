<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/journeyDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="2000-2004"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="0.09">

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#CFCFCF"
                ></LinearLayout>


            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/layout_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                ></LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:visibility="visible"
            android:id="@+id/webview_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.64">
            <RelativeLayout
            android:visibility="visible"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:background="@drawable/tourism_rounded"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/journeyValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/tourism_rounded"
                android:layout_below="@id/biographytext1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/textview_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.64">
            <RelativeLayout
                android:visibility="visible"
                android:padding="2dp"
                android:background="@drawable/tourism_rounded"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textviewjourneyValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@id/biographytext1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>